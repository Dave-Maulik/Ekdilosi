@model IEnumerable<UserEvent>
@{
    ViewBag.Title = "SeeActivity";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@{int i = Model.Count(); }
@if (Session["Admin_Name"] == null)
{

    Response.Redirect("/Home");
}
@if (i == 0)
{
    <h3 class="text-danger">No Events</h3>
}

else {
    <div class="container">
        
        @foreach (var item in Model)
        {
        <div class="row" style="margin-top:15px">
            <div class="col-6">
                <div class="card card-title card border-primary">
                    <div class="card-header">
                        Task Heading : @item.Event.Event_Name
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>@item.Event.Event_Discription</p>
                            <footer class="blockquote-footer">Asigned by <cite title="Source Title">@item.Admin.Admin_Name</cite></footer>
                            <div class="mt-4">
                                <button type="button" class="card-link btn btn-success" style="margin-bottom:10px; margin-left:10px" onclick="location.href='@Url.Action("EditEvent", "Admin", new { item.Event_Id })'">Edit</button>
                                <button type="button" class="card-link  btn btn-danger" style="margin-bottom:10px; margin-left:10px" onclick="location.href='@Url.Action("DeleteUserEvent", "Admin", new { item.Event_Id })'">Delete</button>
                            </div>
                        </blockquote>
                    </div>

                </div>
            </div>
        </div>
        }
    </div>
}
        



