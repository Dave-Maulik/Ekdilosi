@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Ekdilosi.User>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@if (Session["Admin_Name"] == null)
{

    Response.Redirect("/admin");
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h3>@Session["Admin_Name"], What do you want to do ?</h3>
        </div>

    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form class="mt-2 mb-4" method="get"  onsubmit="location.href='@Url.Action("Home","Admin")'">
                <label for="SearchFunction">Search User</label>
                <input type="text" name="Search" id="SearchFunction" class="form-control" placeholder="First name">
                <button class="form-control btn btn-primary mt-2" type="submit">Search</button>
            </form>
        </div>
    </div>
</div>


@if(Model.Count == 0)
{
<div class="container">

    <p class="text-danger">@TempData["NoUserinit"]</p>
</div>
        
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive table-light">
                    <table class="table table-bordered">
                        <thead>
                        <th scope="col">@Html.ActionLink("First Name", "Home", new {SortBy = "Name"})</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Activity</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.User_Name.</td>
                                    <td>@item.User_Email</td>
                                    <td>
                                        <button class="btn btn-danger btn-group-lg" onclick="location.href='@Url.Action("DelUser","Admin", new { item.User_Id})'">Delete User</button>
                                        <button class="btn btn-success btn-group-lg" onclick="location.href='@Url.Action("AddActivity","Admin", new { item.User_Id})'">Add Event</button>
                                        <button class="btn btn-info btn-group-lg" onclick="location.href='@Url.Action("SeeActivity","Admin",new { item.User_Id})'">See Activites</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row mt-3">
        <div class="col-lg-3">
           <div class="pagination">
            @Html.PagedListPager(Model, Page => Url.Action("Home", "Admin", new { Page, Search = Request.QueryString["Search"] as string, SortBy = Request.QueryString["SortBy"] as string }))
           </div>
        </div>
    </div>
</div>



<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Logout","Admin")'">log out</button>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }

