@model Ekdilosi.ViewModel.AdminDataViewModel
@{
    ViewBag.Title = "Home";
}

@if (Session["Admin_Name"] == null)
{

    Response.Redirect("/Home");
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h3>@Session["Admin_Name"], What do you want to do ?</h3>
            <div class="row" style="margin-top:25px">

            </div>
        </div>

    </div>
</div>



@if (Model.users.Count != null)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive table-light">
                    <table class="table table-bordered">
                        <thead>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Activity</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.users)
                            {
                                <tr>
                                    <td>@item.User_Name</td>
                                    <td>@item.User_Email</td>
                                    <td>
                                        <button class="btn btn-danger btn-group-lg" onclick="location.href='@Url.Action("DelUser","Admin", new { item.User_Id})'">Delete User</button>
                                        <button class="btn btn-success btn-group-lg" onclick="location.href='@Url.Action("AddActivity","Admin", new { item.User_Id})'">Add Event</button>
                                        <button class="btn btn-info btn-group-lg" onclick="location.href='@Url.Action("SeeActivity","Admin",new { item.User_Id})'">See Activites</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}



<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Logout","Admin")'">log out</button>
        </div>
    </div>
</div>

