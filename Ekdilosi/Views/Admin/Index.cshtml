@{ 
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="container" style="justify-content:center">
    <div class="row">
        <div class="col-md-4 offset-4" style="margin-top:80px">
            <h2 class="text-center">Admin @@Ekdilosi</h2>
            <form method="post" action="@Url.Action("Index","Admin")" class="bg-light" style="padding:30px">

                <div class="form-group">
                    <label for="UserEmail">Email</label>
                    <input type="email" name="Admin_Email" class="form-control" id="UserEmail" placeholder="Enter Email" />
                </div>
                <div class="form-group">
                    <label for="UserPassword">Last Name</label>
                    <input type="password" name="Admin_Password" class="form-control" id="UserPassword" placeholder="Enter Password" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Admin Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
