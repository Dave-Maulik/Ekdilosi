@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Ekdilosi.User>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive table-light">
                <table class="table table-bordered">
                    <thead>
                        @*<th scope="col">Sr. No </th>*@
                    <th scope="col">@Ajax.ActionLink("First Name","Home",new { SortBy = "Name"} , new AjaxOptions {
                                   HttpMethod="get", UpdateTargetId="one"})
                    @*@Html.ActionLink("First Name", "Home", new { SortBy = "Name" })*@</th>
                    <th scope="col">Email Id</th>
                    <th scope="col">Activity</th>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>

                                <td>@item.User_Name.</td>
                                <td>@item.User_Email</td>
                                <td>
                                    <button class="btn btn-danger btn-group-lg" onclick="location.href='@Url.Action("DelUser", "Admin", new { item.User_Id })'">Delete User</button>
                                    <button class="btn btn-success btn-group-lg" onclick="location.href='@Url.Action("AddActivity", "Admin", new { item.User_Id })'">Add Event</button>
                                    <button class="btn btn-info btn-group-lg" onclick="location.href='@Url.Action("SeeActivity", "Admin", new { item.User_Id })'">See Activites</button>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>